table th
    padding-left:15px
    border: 2px groove black;
    font-size: 25px;

.titles
    height:35px

td
    padding-left:15px
    padding-right:15px
    border: 1px dotted black;

.acl_accept
    background-color: green
.acl_suspect
    background-color: red

td input
  border:0
  font-family : 'Source Code Pro'
  font-size   : 16px


td input:focus
  outline      :0
  background-color:#96D7FF
  border: 1px dotted black;

// align the tables
.inline
    display:inline-table
    vertical-align:top

// for the contact pic
.avatar
    avatar: 50px
    background-color: grey-02

