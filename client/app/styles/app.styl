@font-face
  font-family: 'Source Code Pro'
  font-style: normal
  font-weight: 400
  src: local('Source Code Pro'), local('SourceCodePro-Regular'), url(http://fonts.gstatic.com/s/sourcecodepro/v6/mrl8jkM18OlOQN8JLgasD9V_2ngZ8dMf8fLgjYEouxg.woff2) format('woff2'), url(http://fonts.gstatic.com/s/sourcecodepro/v6/mrl8jkM18OlOQN8JLgasDxM0YzuT7MdOe03otPbuUS0.woff) format('woff')

body
  font-family: 'Source Code Pro'

#sharingBlock
  border: 5px ridge black;
  display: inline-block;
  padding-left: 5px;

#imgplug
  z-index:0;
#imglock
  z-index:1;
#authenticate
  display: block;
  margin-left: auto;
  margin-right: auto;

#plugBlock
  border: 4px solid red;
  display: inline-block;
  margin-right: 150px;
  margin-left: 20px;
  vertical-align: top;

#

.formRow
    display:flex
    align-items:center

#more-tools
    display:none

#toggle-more-tools:checked ~ #more-tools
    display:block

#myList
  display:none;

//#show-list:checked ~ #myList
