div(id="blockArea", class="container blockArea")

    h2
        i(class="fa fa-area-chart fa-1x")  Reference monitor performances evaluation 

    
    div(class="well bs-component")
        form(class="form-horizontal")
            fieldset
                legend Evaluate performances in the Secure Environment
                div(class="form-group")
                    i(class="col-lg-3")  Number of ACLs
                    input(id="nACLs", class="col-lg-1", type='text')
                    a(id="genACL", href="#", class="btn btn-default", style="margin-top:0px; margin-left:20px;") Generate ACLs
                    p(id="genTime")
                div(id="progressbar", class="progress progress-striped active")
                    div(id="pBarGenACL", class="progress-bar", style="width:0%;")

                div(class="form-group")
                    i(class="col-lg-3")  Number of Allowed queries
                    input(id="nAllowedQueries", class="col-lg-1", type='text')
                    a(id="runAllowed", href="#", class="btn btn-default", style="margin-top:0px; margin-left:20px;") Run queries

                div(class="form-group")
                    i(class="col-lg-3")  Number of Triggers queries
                    input(id="nTriggersQueries", class="col-lg-1", type='text')
                    a(id="runTriggers", href="#", class="btn btn-default", style="margin-top:0px; margin-left:20px;") Run queries

    div
        br
    div(id="allowed_graph", style="width:50%;height:250px;float:left")
    div(id="trigger_graph", style="width:50%;height:250px;float:right")
    
