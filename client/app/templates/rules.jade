div(class="container")
    h3 Create sharing rule
    form
        div(class="form-group")
            label What docs?
            input(type='text', name='doctype')
            label Attr
            input(type='text', name='docattr')
            label Value
            input(type='text', name='docval')
        div(class="form-group")
            label With who?
            label Attr
            input(type='text', name='subattr')
            label Value
            input(type='text', name='subval')
        input(id='createRule', type='button', value='Ok')
        
div(class="container")
    h3 See sharing rules
    
    table(class="table table-bordered")
        thead
            tr(class="titles")
                th What to share
                th With who
                th Action
        tbody
            each rule, i in rules
                tr
                    td #{rule.fDoc}
                    td #{rule.fSub}
                    td
                        input(data-id="#{rule.id}", data-status="blind", name="show", type="image", src="./images/visualize.svg", alt="show ACL", height="25", width="25")
                        input(data-id="#{rule.id}", name="remove", type="image", src="./images/cancel.png", alt="remove rule", height="25", width="25")
                
