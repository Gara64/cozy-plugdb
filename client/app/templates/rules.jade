div(class="container border rounded blockArea")
    div(class="container")
        h2
            i(class="fa fa-lightbulb-o fa-1x")  Advisor
            //i(class="fa fa-cog", aria-hidden="true") Advisor
        br
        
        h4
            i(class="fa fa-cog")  Watchdog Triggers
        a(class="col-lg-2 btn btn-success", id="addtrigger", href="#", , style="margin-bottom:10px;")
            i(class="fa fa-plus-circle fa-sg")  Add Trigger
            
    div(id="createtrigger", class="container", style="display:none")
        div(class="well bs-component")
            form(class="form-horizontal")
                fieldset
                    legend Create trigger on sensitive documents
                    div(class="form-group")
                        label(class="col-lg-3", for="select") Trigger type
                        select(class="col-lg-2", id="triggertype")
                            option(name="who") &#xf0c0; Who
                            option(name="what") &#xf0c5;  What
                            option(name="which") &#xf0c0;&#xf0c5; Which
                    div(class="form-group")
                        label(id="triggeratt1", class="col-lg-3") Attribute Who
                        input(class="col-lg-2", type='text', name='triggerattribute')
                    div(class="form-group")
                        label(id="triggerval1", class="col-lg-3") Value Who
                        input(class="col-lg-2", type='text', name='triggervalue')
                    div(id="triggerattblock", class="form-group", style="display:none")
                        label(id="triggeratt2", class="col-lg-3") Attribute
                        input(class="col-lg-2", type='text', name='triggerattribute2')
                    div(id="triggervalblock", class="form-group", style="display:none")
                        label(id="triggerval2", class="col-lg-3") Value
                        input(class="col-lg-2", type='text', name='triggervalue2')
                    input(id='createTrigger', class="btn btn-primary", type='button', value='Create trigger')

    div(class="container")
        table(class="table table-bordered")
            thead
                tr(class="titles")
                    th Trigger type
                    th Watchdog
                    th Action
            tbody
                each trigger, i in triggers
                    tr(id="#{trigger.id}")
                        td(class="col-lg-2") #{trigger.type}  
                            i(class="triggerType")
                            i(class="triggerType2")
                        td(class="col-lg-5")
                            p(id="watchdog") #{trigger.watchdog}
                        td(class="col-lg-3")
                            a(class="btn btn-default", data-id="#{trigger.id}", name="showTrigger", href="#")
                                i(class="fa fa-eye fa-sg")  See results
                            a(class="btn btn-danger", data-id="#{trigger.id}", name="removeTrigger", href="#")
                                i(class="fa fa-trash-o fa-sg")  Delete
                            

    #trigger

