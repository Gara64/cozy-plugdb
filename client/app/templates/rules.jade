div(class="container")
    
    h2
        i(class="fa fa-share-alt fa-1x")  Admin Sharing Rules
    
    a(class="col-sg-3 btn btn-success", id="addsharingrule", href="#", style="margin-bottom:20px;")
        i(class="fa fa-plus-circle fa-sg")  Add Sharing Rule
    


div(id="createrule", class="container", style="display:none")
    div(class="well bs-component")
        form(class="form-horizontal")
            fieldset
                legend Create Sharing rule
                div(class="form-group")
                    i(class="fa fa-files-o fa-lg col-lg-2")  What docs?
                div(class="form-group")
                    label(class="col-lg-offset-2 col-lg-1") Type
                    input(class="col-lg-3", type='text', name='doctype')
                div(class="form-group")
                    label(class="col-lg-offset-2 col-lg-1") Attribute
                    input(class="col-lg-3", type='text', name='docattr')
                div(class="form-group")
                    label(class="col-lg-offset-2 col-lg-1") Value
                    input(class="col-lg-3", type='text', name='docval')
                div(class="form-group")
                    label(class="fa fa-users fa-lg col-lg-2")  With who?
                div(class="form-group")
                    label(class="col-lg-offset-2 col-lg-1") Attribute
                    input(class="col-lg-3", type='text', name='subattr')
                div(class="form-group")
                    label(class="col-lg-offset-2 col-lg-1")  Value
                    input(class="col-lg-3", type='text', name='subval')
                input(id='createRule', class="btn btn-primary", type='button', value='Create rule')
            



div(class="container")
    table(class="table table-bordered")
        thead
            tr(class="titles")
                th
                    p Share what?
                        i(class="fa fa-files-o fa-lg")
                th
                    p With who?
                        i(class="fa fa-users fa-lg")
                th Action
        tbody
            each rule, i in rules
                tr
                    td(data-docruleid="#{rule.id}") #{rule.filterDoc.rule}
                    td #{rule.filterUser.rule}
                    td
                        a(class="btn btn-default", data-id="#{rule.id}", name="showACL", href="#")
                            i(class="fa fa-eye fa-sg")  See ACL
                        a(class="btn btn-default", data-id="#{rule.id}", name="showStats", href="#")
                            i(class="fa fa-area-chart fa-sg")  Show stats
                        a(class="btn btn-danger", data-id="#{rule.id}", name="removeRule", href="#")
                            i(class="fa fa-trash-o fa-sg")  Delete


